
.containers{
    padding-top: 12vh;
}

.top-setting-group{
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    width: 20vw;
    height: 5vh;
}

.top-setting-icon{
    height: 50rpx;
    width: 50rpx;
    top: 5vh;
}

.top-share-icon{
    height: 50rpx;
    width: 50rpx;
    top: 5vh;
}

.imagesize{
    display:flex;             
    justify-content: center;  
    padding: 0rpx;      
   }
.imagesize image { 
     width:300rpx;
     height:300rpx;
   }
.container{
    display:flex;             
    justify-content: center;
    align-items: center;
    height: 100%;
    margin-top: 60rpx;
}
.text_blue_size{
    font-size: 30rpx;
    color: rgb(35, 104, 255);
    font-weight: 400;
}
.text_grey_size{
    font-size: 52rpx;
    color:rgb(148, 148, 148);
    font-weight: 400;
}
.zero{
    color: rgb(255, 255, 255);
    font-size: 30rpx;
}
.button{
    width: 30rpx;
    background: white;
    border: none;
    text-align: center;
    margin: 0px;
    line-height: 0.5;
    border-radius: 0;
}
.button::after{
    border: none;
    border-radius: 0;
}
.buttons{
    width: 30rpx;
    background: white;
    border: none;
    text-align: left;
    padding: 10px 10px;
    margin: 0px;
    line-height: 0.5;
    border-radius: 0;
}
.buttons::after{
    border: none;
    border-radius: 0;
}
.buttonm{
    width: 30rpx;
    background: white;
    border: none;
    text-align: center;
    padding: 6px 6px;
    margin: 0px;
    line-height: 0.5;
    border-radius: 0;
}
.button::after{
    border: none;
    border-radius: 0;
}
.fengexian{
    width: 100%;
    height: 10px;
    background: gainsboro;
}
.black{
    font-size: large;
    font-weight: 500;
    color: black;
}
.pad{
    padding: 30px;
}

.title{
    display: flex;
    flex-direction: column;
    text-align: center;
}

.title-head{
    font-size: large;
}

.title-desc{
    font-size: small;
    color: grey;
}