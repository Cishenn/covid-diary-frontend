.container{
    padding-top: 12vh;
}

::-webkit-scrollbar {
    width:0;
    height:0;
    color:transparent;
}

.nav-bar-title-style{
    font-size: 35rpx!important;
    font-weight: bold!important;
}

.top-setting-group{
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    width: 20vw;
    height: 5vh;
}

.top-setting-icon{
    height: 50rpx;
    width: 50rpx;
    top: 5vh;
}

.top-share-icon{
    height: 50rpx;
    width: 50rpx;
    top: 5vh;
}

.comment-unit{
    border-radius: 3%;
    border: dotted #ACC0D8 1px;
    margin: 8rpx;
    margin-bottom: 20rpx;
    padding: 10rpx;
    background-color: lightgoldenrodyellow;
}

.user-info{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.avatar-icon{
    height: 50rpx;
    width: 50rpx;
    margin-left: 3rpx;
}

.comment-name{
    font-size: 40rpx;
    padding-left: 3%;
}

.comment-time{
    position: absolute;
    right: 15rpx;
}

.like-icon{
    height: 50rpx;
    width: 50rpx;
    margin-left: 3rpx;
}

.reply-icon{
    height: 50rpx;
    width: 50rpx;
    margin-left: 3rpx;
}

.bottom-component{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 10rpx;
    margin-top: 20rpx;
}

.comment-content{
    margin-top: 10rpx
}

.comment-like{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.comment-reply{
    display: flex;
    flex-direction: row;
    align-items: center;
    position: absolute;
    right: 15rpx;
}

.fixed-field{
    position: fixed;
    width: 100%;
    bottom: 0;
    right: 0;
}

.send-btn{
    width: 10%;
}
