.container{
    padding-top: 12vh;
}

::-webkit-scrollbar {
    width:0;
    height:0;
    color:transparent;
}

.nav-bar-title-style{
    font-size: 35rpx!important;
    font-weight: bold!important;
}

.top-setting-group{
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    width: 20vw;
    height: 5vh;
}

.top-setting-icon{
    height: 50rpx;
    width: 50rpx;
    top: 5vh;
}

.top-share-icon{
    height: 50rpx;
    width: 50rpx;
    top: 5vh;
}

.scroll-item-style{
    white-space:nowrap;
}

.scroll-item{
    height: 25vh;
    width: 90vw;
    display: inline-block;
    margin: 0 5vw;
    overflow: hidden;
}

.scroll-item-image{
    height: 25vh;
    width: 90vw;
    border-radius: 20rpx;
}

.card-description{
    position: absolute;
    top: 30vh;
    transform: translateX(-50%);
    left: 50%;
    height: auto;
    width: 70vw;
    padding: 0 40rpx;
    background-color: #fff;
    border-radius: 20rpx;
    box-shadow: 0px 15px 10px -10px rgb(231, 231, 231);
}

.card-description-group{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding-bottom: 20rpx;
}

.card-description-title{
    font-size: 40rpx;
    font-weight: bold;
    padding: 20rpx 0;
}

.middle-title-icon-group{
    padding-right: 30rpx;
    display: flex;
    align-items: center;
}

.middle-title-icon{
    width: 30rpx;
    height: 30rpx;
}

.middle-title-icon-text{
    font-size: 25rpx;
    padding: 10rpx;
}

.card-description-text{
    font-size: 25rpx;
    color: #bcc0c9;
    padding-bottom: 20rpx;
}

.timeline-group{
    margin-top: 15vh;
}

.timeline-content{
    margin-top: 60rpx;
    height: auto;
    width: 80vw;
    background-color: #fff;
    border-radius: 40rpx;
    box-shadow: 5px 5px 5px gainsboro;
    position: relative;
}

.timeline-content-image{
    position: absolute;
    left: -5%;
    top: -10%;
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
}

.timeline-content-group{
    padding-left: 200rpx;
    padding-top: 20rpx;
}

.timeline-content-group-title{
    font-size: 30rpx;
    font-weight: bold;
    color: #000;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    align-content: center;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.timeline-content-group-description{
    margin-right: 10rpx;
    font-size: 25rpx;
    color: #bcc0c9;
    padding: 20rpx 0;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}