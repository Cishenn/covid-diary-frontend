@import "./ripples.wxss";

page{
    height:100%;
}

.container{
    padding-top: 4.5vh;
}

.index-bg-image {
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: -100;
}

.top-navigation-title{
    font-size: 40rpx;
    text-align: center;
    color: #fff;
}

.top-back-icon{
    position: absolute;
    height: 50rpx;
    width: 50rpx;
    top: 5vh;
    left: 40rpx;
    float: left;
}

.top-share-icon{
    position: absolute;
    height: 50rpx;
    width: 50rpx;
    top: 5vh;
    left: 100rpx;
    float: left;
}

.scroll-box{
    white-space: nowrap;
    height: 90vh;
}

.card-box{
    display: inline-block;
}

.card-item{
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    height: 80vh;
    width: 80vw;
    margin: 0 10vw;
    font-size: 40px;
    background: transparent;
    border-radius: 30rpx;
}

.card-header{
    width: 80vw;
    text-align: center;
    font-size: 30rpx;
    color: #ac0714;
}

.card-content{
    margin-top: 40rpx;
    border-radius: 30rpx; 
    height: 62vh;
    width: 80vw;
    overflow: hidden;
}

.card-image{
    height: 62vh;
    width: 80vw;
}