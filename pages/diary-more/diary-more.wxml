<view class="container">
    <view class="top-bg-group">
        <van-nav-bar title="更多日记" custom-class="nav-bar-style" fixed title-class="nav-bar-title-style" border="{{false}}">
            <view slot="left" class="top-setting-group">
                <view class="navigate-item" bindtap="handleNavigate">
                    <image class="top-setting-icon" src="/icons/back.png"></image>
                </view>
                <navigator url="" hover-class="navigator-hover">
                    <image class="top-share-icon" src="/icons/index_share.png"></image>
                </navigator>
            </view>
        </van-nav-bar>
    </view>

    <view class="more-item-group">
        <view class="more-card-group">
            <view wx:for="{{moreDiary}}" wx:key="_id" bindtap="handleNavigateToDiary" data-id="{{item._id}}">
                <view class="more-card">
                    <image class="more-card-image" src="{{item.bg_image}}" mode="widthFix"></image>
                    <view class="more-card-info">
                        <view class="more-card-location">
                            <image class="middle-title-icon" src="/icons/article_position.png"></image>
                            <view class="more-card-location-text">{{item.location}}</view>
                        </view>
                        <view class="more-card-text">{{item.title}}</view>
                        <view class="more-card-detail">{{item.description}}</view>
                        <view class="category-card-info">
                            <view class="middle-title-icon-group">
                                <image class="middle-title-icon" src="/icons/article_like.png"></image>
                                <text class="middle-title-icon-text">{{item.like_num}}</text>
                            </view>
                            <view class="middle-title-icon-group">
                                <image class="middle-title-icon" src="/icons/article_view.png"></image>
                                <text class="middle-title-icon-text">{{item.view_num}}</text>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
 
</view>