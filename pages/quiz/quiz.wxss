.container{
    margin-top: 10vh;
}

.go-page-top{
    height: 80rpx;
    width: 80rpx;
    position: fixed;
    bottom: 5vh;
    right: 8vw;
}

.nav-bar-title-style{
    font-size: 40rpx!important;
    font-weight: bold!important;
}

.top-setting-group{
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    width: 20vw;
    height: 5vh;
}

.top-setting-icon{
    height: 50rpx;
    width: 50rpx;
    top: 5vh;
}

.top-share-icon{
    height: 50rpx;
    width: 50rpx;
    top: 5vh;
}

.top-image-group{
    padding: 30rpx;
}

.top-poster-image{
    width: 100%;
    height: 20vh;
    border-radius: 20rpx;
}

.content-item-group{
    padding: 0 30rpx;
}

.selected-item-title{
    font-size: 40rpx;
    font-weight: bold;
    padding-left: 20rpx;
}

.selected-quiz-item-card{
    margin-top: 30rpx;
    width: auto;
    height: auto;
    border-radius: 20rpx;
    border: 1rpx solid rgb(233, 232, 232);
    box-shadow: 5px 5px 5px rgb(233, 232, 232);
}

.item-card-title{
    padding: 20rpx;
}

.item-card-title-num{
    font-weight: bold;
}

.item-card-title-text{
    padding-left: 20rpx;
    font-size: 35rpx;
}

.item-card-options{
    padding-left: 20rpx;
    padding-bottom: 10rpx;
}

.selected-radio-style{
    padding: 5rpx;
    font-size: 28rpx;
}

.judge-quiz-item{
    margin: 30rpx 0;
}

.submit-item-group{
    padding: 20rpx 0 40rpx;
}

.submit-button-style{
    color: var(--themeColor2)
}

.error-item-group{
    padding: 0 20rpx;
}

.error-text{
    font-size: 25rpx;
    color: red;
}