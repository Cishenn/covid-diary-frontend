page{
    background-color: #f9f9f9;
}

.top-setting-group{
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    width: 20vw;
    height: 5vh;
}

.top-setting-icon{
    height: 50rpx;
    width: 50rpx;
    top: 5vh;
}

.top-share-icon{
    height: 50rpx;
    width: 50rpx;
    top: 5vh;
}

.nav-bar-style{
    background-color: transparent!important;
}

.nav-bar-title-style{
    color: #fff!important;
    font-weight: bold!important;
}

.bg-image{
    position: absolute;
    top: 0;
    width: 100%;
    height: 40vh;
    background-size:100% 100%;
    border-bottom-left-radius: 10%;
    border-bottom-right-radius: 10%;
}

.middle-title-group{
    margin-top: 35vh;
    padding: 0 40rpx;
    height: auto;
    background-color: #fff;
}

.middle-title{
    padding-top: 8vh;
    height: auto;
    padding-bottom: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.middle-title-text{
    font-size: 50rpx;
    font-weight: bold;
    display: inline;
}

.title-like-icon-bg{
    height: 90rpx;
    width: 90rpx;
    background-color: #fff;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: darkgrey 10rpx 10rpx 30rpx 5rpx;
}

.title-like-icon{
    height: 50rpx;
    width: 50rpx;
}

.middle-title-item{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding-bottom: 20rpx;
}

.middle-title-icon-group{
    padding-right: 30rpx;
    display: flex;
    align-items: center;
}

.middle-title-icon{
    width: 30rpx;
    height: 30rpx;
}

.middle-title-icon-text{
    font-size: 25rpx;
    padding: 10rpx;
}

.middle-detail-group{
    margin-top: 30rpx;
    height: auto;
    background-color: #fff;
}

.middle-detail-title{
    padding: 20rpx 40rpx 0;
    font-size: 30rpx;
    font-weight: bold;
}

.middle-detail-content{
    padding: 40rpx 40rpx;
    font-size: 28rpx;
    color: #c9ccd1;
    text-indent: 2em;
}

.bottom-position-group{
    margin-top: 30rpx;
    padding: 40rpx;
    height: auto;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.bottom-position-text{
    font-size: 30rpx;
    font-weight: bold;
    display: inline;
}

.bottom-position-link{
    display: flex;
    align-items: center;
}

.bottom-position-link-text{
    font-size: 25rpx;
    color: #aaa;
}

.bottom-image-group{
    margin-top: 30rpx;
    height: 10vh;
    background-color: #fff;
}