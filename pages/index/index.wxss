page{
    height:100%;
}

.container{
    padding-top: 4.5vh;
}

.index-bg-image {
    width: 100%;
    height: 100%;
    position:fixed; 
    background-size:100% 100%;
    z-index: 100;
}

.top-setting-icon{
    position: absolute;
    height: 50rpx;
    width: 50rpx;
    top: 5vh;
    left: 40rpx;
    float: left;
}

.top-share-icon{
    position: absolute;
    height: 50rpx;
    width: 50rpx;
    top: 5vh;
    left: 100rpx;
    float: left;
}

.top-navigation-title{
    font-size: 40rpx;
    text-align: center;
}

.top-swiper-group{
    height: 300rpx;
    padding: 30rpx 40rpx;
}

.swiper-item{
    border-radius: 20rpx;
    overflow: hidden;
}

.swiper-image{
    width: 100%;
}

.top-item-group{
    display: flex;
}

.top-item{
    flex: 1;
    margin: auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}

.top-item-icon{
    width: 10vw;
    height: 10vw;
    padding: 20rpx 0;
}

.top-item-text{
    text-align: center;
    font-size: 30rpx;
    font-weight: 500;
}

.middle-data-panel{
    margin: 40rpx 0 20rpx;
    border-top: 1rpx solid #f0eeee;
    border-bottom: 1rpx solid #f0eeee;
}

.data-panel-header{
    padding: 0 30rpx;
}

.panel-image{
    height: 80rpx;
    width: 200rpx;
}

.panel-text-group{
    color: #aaa;
    font-size: 30rpx;
    display: flex;
    align-items: center;
}

.data-panel-header{
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.panel-data-group{
    display: flex;
}

.panel-data-item{
    flex: 1;
    margin: auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}

.panel-data1{
    color: #ff4e29;
    font-size: 40rpx;
    padding: 20rpx;
    font-weight: bold;

}

.panel-data2{
    color: #0158e0;
    font-size: 40rpx;
    padding: 20rpx;
    font-weight: bold;

}

.panel-data3{
    color: #000;
    font-size: 40rpx;
    padding: 20rpx;
    font-weight: bold;
}

.panel-data4{
    color: #24aa68;
    font-size: 40rpx;
    padding: 20rpx;
    font-weight: bold;

}

.panel-data-text{
    padding-bottom: 20rpx;
    font-size: 30rpx;
}

.notice-bar-style{
    height: 5vh!important;
}

.scroll-item-group{
    padding: 0 30rpx;
}

.scroll-item-style{
    white-space:nowrap;
}

.scroll-item{
    background-color:blue;
    height: 150rpx;
    width: 250rpx;
    display: inline-block;
    border-radius: 20rpx;
    margin: 20rpx 20rpx;
    overflow: hidden;
}

.scroll-item-image{
    height: 150rpx;
    width: 250rpx;
}









